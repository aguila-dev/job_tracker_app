# Node environment
NODE_ENV=development

# Server
PORT=8000

# Database
LOCAL_PG_DB_USER=postgres
LOCAL_PG_DB_PASSWORD=yourpassword
LOCAL_PG_DB_NAME=jobsdb
LOCAL_PG_DB_NAME_TEST=jobsdb_test
LOCAL_PG_DB_URL=postgresql://localhost:5432/jobsdb

# Authentication - Auth0
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=your-api-identifier
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret

# JWT (For deprecated auth system)
JWT_SECRET=generate-a-secure-random-string
JWT_REFRESH_SECRET=generate-a-different-secure-random-string
SESSION_SECRET=generate-another-secure-random-string

# Security
ENCRYPTION_SECRET=generate-a-32-byte-hex-string
ENCRYPTION_ENABLED=true

# Updates
IGNORE_UPDATE_ON_RESTART=true